{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default-ninja",
      "displayName": "Default Ninja",
      "description": "Default build using Ninja generator",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/default-ninja-gen",
      "installDir": "${sourceDir}/install/default-ninja-install",
      "cacheVariables": {
        "FIRST_CACHE_VARIABLE": {
          "type": "BOOL",
          "value": "OFF"
        },
        "SECOND_CACHE_VARIABLE": "ON",
        "MY_VAR": "name"
      },
      "environment": {
        "MY_ENVIRONMENT_VARIABLE": "Test",
        "PATH": "$env{HOME}/ninja/bin:$penv{PATH}"
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "Default"
        }
      }
    },
    {
      "name": "ninja-multi",
      "inherits": "default-ninja",
      "displayName": "Ninja Multi-Config",
      "description": "Default build using Ninja Multi-Config generator",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/ninja-multi"
    },
    {
      "name": "windows-only",
      "inherits": "default",
      "displayName": "Windows-only configuration",
      "description": "This build is only available on Windows",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "base-xcode",
      "displayName": "baseXcode",
      "generator": "Ninja",
      "description": "Base preset for other Xcode configurations",
      "cacheVariables": {
        "BASE_CACHE_VARIABLE": "${hostSystemName}"
      }
    },
    {
      "name": "remote-xcode",
      "displayName": "Remote Xcode",
      "description": "Remote build using Xcode generator",
      "inherits": "base-xcode",
      "generator": "Xcode",
      "binaryDir": "${sourceDir}/build/remote-xcode",
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "cacheVariables": {
        "FIRST_CACHE_VARIABLE": {
          "type": "BOOL",
          "value": "OFF"
        },
        "SECOND_CACHE_VARIABLE": "ON"
      },
      "environment": {
        "MY_ENVIRONMENT_VARIABLE": "Test",
        "PATH": "$env{HOME}/ninja/bin:$penv{PATH}"
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "Remote Host"
        }
      }
    },
    {
      "name": "local-xcode",
      "displayName": "Default Xcode",
      "description": "Default build using Xcode generator",
      "binaryDir": "${sourceDir}/build/local-xcode",
      "inherits": "base-xcode",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "cacheVariables": {
        "FIRST_CACHE_VARIABLE": {
          "type": "BOOL",
          "value": "OFF"
        },
        "SECOND_CACHE_VARIABLE": "ON"
      },
      "environment": {
        "MY_ENVIRONMENT_VARIABLE": "Test",
        "PATH": "$env{HOME}/ninja/bin:$penv{PATH}"
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "Default"
        }
      }
    }

  ],
  "buildPresets": [
    {
      "name": "default-ninja",
      "configurePreset": "default-ninja"
    },
    {
      "name": "ninja-multi",
      "configurePreset": "ninja-multi"
    },
    {
      "name": "remote-xcode",
      "configurePreset": "remote-xcode"
    },
    {
      "name": "local-xcode",
      "configurePreset": "local-xcode"
    }
  ],
  "testPresets": [
    {
      "name": "default-ninja",
      "configurePreset": "default-ninja",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    }
  ],
  "vendor": {
    "example.com/ExampleIDE/1.0": {
      "autoFormat": false
    }
  }
}